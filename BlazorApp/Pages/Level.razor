@using System.Text.Json
@using RexSimulator.Hardware
@inject IJSRuntime JSRuntime

<PageTitle>@Title</PageTitle>

<div class="flex-column d-flex vh-100">
    <nav class="navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img id="logo" src="img/reginald.png" alt="Photo of a duck"/>
                <span class="h1">WRAMP SIM</span>
            </a>
        </div>
    </nav>

    <div class="container-fluid flex-grow-1 overflow-hidden pb-3">
        <div class="row h-100">
            <LevelSelector LevelName="@LevelName"/>

            <div class="col">
                @if (Components.Blockly)
                {
                    <Blockly @ref="blocklyComponent" Exported="ExportHandler" Toolbox="@JsonSerializer.Serialize(toolbox)"/>
                }
                else if (MainInstructions != null)
                {
                    <div>@MainInstructions</div>
                }
            </div>

            <div class="col d-flex flex-column h-100">
                <WSIM @ref="wsimComponent" CompileRequested="CompileHandler" BoardChanged="BoardHandler" Registers="@Registers" components="@Components" WSIMInstructions="@WSIMInstructions" Library="@Library"/>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    required public string Title { get; set; }

    [Parameter]
    required public string LevelName { get; set; }

    [Parameter]
    required public Toolbox toolbox { get; set; }

    [Parameter]
    required public List<KeyValuePair<int, int>> Registers { get; set; }

    [Parameter]
    required public Components Components { get; set; }

    [Parameter]
    public RenderFragment? WSIMInstructions { get; set; }

    [Parameter]
    public RenderFragment? MainInstructions { get; set; }

    [Parameter]
    public EventCallback LevelChanged { get; set; }

    [Parameter]
    public string[]? Library { get; set; }

    public Blockly? blocklyComponent;
    public WSIM? wsimComponent;

    async Task CompileHandler()
    {
        if (blocklyComponent != null) await blocklyComponent.Export();
    }

    async Task ExportHandler((string code, string[] IDs, List<string> labels) args)
    {
        if (wsimComponent != null) await wsimComponent.Compile(args);
    }

    async Task BoardHandler()
    {
        await LevelChanged.InvokeAsync();
    }
}