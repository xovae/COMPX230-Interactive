@using System.Runtime.CompilerServices
@using System.ComponentModel
@inject IJSRuntime JSRuntime

<div id="blocklyDiv"></div>

<button @onclick="export">Export</button>

@code {
    [Parameter]
    public EventCallback<string> onExportClicked { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initBlockly");
        }
    }

    async Task export()
    {
        string code = await JSRuntime.InvokeAsync<string>("generateCode");

        if (code.Contains("main:"))
        {
            code = ".text\n.global main\n" + code;
            await onExportClicked.InvokeAsync(code);
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("alert", "No main label added!");
        }

    }
}
