@inject IJSRuntime JSRuntime

<div class="col-auto">
    <button class="btn btn-primary" id="levelButton" type="button" data-bs-toggle="collapse" data-bs-target="#levelSelect" aria-expanded="true" aria-controls="levelSelect">
        â˜°
    </button>
    <div class="collapse collapse-horizontal show" id="levelSelect">
        <ul class="nav flex-column nav-pills">
            <li class="nav-item">
                <a class="nav-link" id="sandbox" aria-current="page" href="/">Sandbox</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="levelIntro" href="/levelIntro">Level Intro</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="levelTwo" href="/levelTwo">Level 2</a>
            </li>
        </ul>
    </div>
</div>

@code {
    [Parameter]
    required public string Level { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("levelSelect", Level);
        }
    }
}
